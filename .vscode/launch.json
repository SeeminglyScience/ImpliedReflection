    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${file}"
        },
        {
            "name": ".NET FullCLR Attach",
            "type": "clr",
            "request": "attach",
            "processId": "${command:pickProcess}",
        },
        {
            "name": ".NET CoreCLR Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}",
        },
    ],
}
